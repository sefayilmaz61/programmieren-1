{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (c)",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.EXE",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${file}",
                "-o",
                "${workspaceFolder}/output/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build (c++)",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.EXE",
            "args": [
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-g3",
                "${file}",
                "-o",
                "${workspaceFolder}/output/${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}